/*******************************
    Pastanaga Theme Overrides
*******************************/

.ui.breadcrumb {
  display: flex;
  align-items: center;

  .home.icon {
    margin-right: 0;
  }
}

nav.ui.breadcrumb ol {
  list-style: none;
  padding-left: 0;
  margin: 0;
  padding-top: @space-025;
  li {
    display: inline;
  }
}

/*******************************
        Theme Overrides
*******************************/

.ui.breadcrumb {
  .section {
    overflow: hidden;

    /* Max breadcrumb length */
    min-height: @breadcrumbItemMinHeight;
    max-width: @breadcrumbItemMaxWidth;
    padding: @mobileBreadcrumbPadding;
    text-overflow: ellipsis;
    white-space: nowrap;

    &.active {
      color: @activeColor;
    }

    img {
      width: @breadcrumbImgWidth;
    }
  }

  i.icon {
    width: @breadcrumbIconWidth;
    font-size: @breadcrumbIconFontSize;
  }
}
