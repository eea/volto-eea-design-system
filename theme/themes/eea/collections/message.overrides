/*******************************
         Theme Overrides
*******************************/

div.ui.message {
  border-radius: @borderRadius;
  box-shadow: @boxShadow;
}

div.ui.icon.message > .icon,
div.ui.icon.message > .icon:not(.close) {
  font-size: @iconSize;
}

div.ui.message .content {
  font-size: @12px;
}

div.ui.attached.message {
  margin: 0;
}
