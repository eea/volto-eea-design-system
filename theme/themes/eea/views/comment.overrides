/*******************************
         Theme Overrides
*******************************/

.ui.comments .comment .avatar.circular img {
  border-radius: 50%;
}

div.ui.comments .comment {
  a.author {
    color: @authorColor;

    &:hover,
    &:active {
      color: @authorHoverColor;
    }
  }

  .metadata {
    color: @metadataColor;
  }

  .actions a {
    color: @actionLinkColor;

    &:active,
    &hover {
      color: @actionLinkHoverColor;
    }
  }
}
