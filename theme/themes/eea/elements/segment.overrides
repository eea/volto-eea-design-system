/*******************************
         Theme Overrides
*******************************/

.ui.segment.flex.align.center {
  display: flex;
  align-items: center;
}

.profile .ui.segments.raised {
  width: @computerProfileSectionWidth;
}

@media only screen and (max-width: @largestMobileScreen) {
  .profile .ui.segments.raised {
  width: @mobileProfileSectionWidth;
}
}