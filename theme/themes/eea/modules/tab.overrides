/*******************************
         Tab Overrides
*******************************/

.ui.pointing.secondary.menu {
  a.item {
    font-size: @mobileHeaderSize;
  }

  a.item:hover {
    color: @tabActiveItemHoverColor;
  }
}

@media only screen and (min-width: @tabletBreakpoint) {
  .ui.pointing.secondary.menu {
    a.item {
      font-size: @tabletHeaderSize;
    }
  }
}