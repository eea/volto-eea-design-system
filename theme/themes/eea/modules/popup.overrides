    text-decoration: @textDecoration;

    &:hover {
      text-decoration: @noTextDecoration;
    }
  }
}

.with-popup {
  cursor: @cursor;
}

.popup-container .popup {
  position: initial; // without position initial popper cannot correctly place popup
  padding-right:10px;
  margin-right:10px;
}
