/*******************************
         Theme Overrides
*******************************/

.ui.accordion {
  margin: @itemsMargin;
  transition: @styledTitleTransition;

  .title {
    display: flex;
    align-items: center;
    justify-content: @titleJustifyContent;
    border-bottom: @titleBorderBottom;

    &.align-arrow-left {
      justify-content: flex-start;
    }

    i {
      flex-shrink: 0;
    }

    &:hover {
      color: @titleColorHover;

      i {
        color: @iconColorHover;
      }
    }

    i {
      display: flex;
      width: @iconWidth;
      height: @iconHeight;
      align-items: center;
      order: @iconOrder;
      margin: @iconMargin;
      color: @iconColor;
      font-size: @iconFontSize;
      line-height: @iconFontSize;

      &:before {
        content: @iconInactive;
        font-size: @iconFontSize;
      }
    }
  }

  .active.title {
    border-bottom: @activeTitleBorderBottom;
    background-color: @activeTitleBackground;
    color: @activeTitleColor;

    i {
      color: @iconColorActive;

      &:before {
        content: @iconActive;
      }
    }
  }

  .content {
    background: @contentBackground;
    padding: @contentPadding;
  }
}

/* All content padding are equal including last child */
.ui.accordion:not(.styled) .title ~ .content:not(.ui):last-child {
  padding-bottom: @contentPaddingBottom;
}

/*******************************
            Types
*******************************/

/*--------------
     Styled
---------------*/

.ui.styled.accordion  .title,
.ui.styled.accordion  .title:hover {
  background-color: @styledActiveTitleBackground;
}
.ui.styled.accordion .active.title input {
  color: @styledActiveTitleColor;
}

/*------------------------------
     Tabs as accordion (Volto)
--------------------------------*/

.ui.menu.RRT__accordion {
  .ui.item {
    background-color: transparent;
  }

  .ui.item i {
    font-size: @iconFontSize;

    &::before {
      font-size: @iconFontSize;
    }
  }
}

/*--------------
   Variations
---------------*/
.ui.accordion:not([class*='ary']) .active.title i {
   color: @tertiaryColor;
}
.ui.accordion[class*='ary'] .active.title {
  color: white;
}

/* Primary */
.ui.accordion.primary .active.title {
  background-color: @primaryColor;
}
.ui.accordion.primary .title:not(.active):hover,
.ui.accordion.primary .title:not(.active):hover i {
  color: @primaryColor;
}

/* Secondary */
.ui.accordion.secondary .active.title {
  background-color: @secondaryColor;
}
.ui.accordion.secondary .title:not(.active):hover,
.ui.accordion.secondary .title:not(.active):hover i {
  color: @secondaryColor;
}

/* Tertiary */
.ui.accordion.tertiary .active.title {
  background-color: @tertiaryColor;
}
.ui.accordion.tertiary .title:not(.active):hover,
.ui.accordion.tertiary .title:not(.active):hover i {
  color: @tertiaryColor;
}