/*******************************
          FAQ Content
*******************************/

/* FAQ Content row */
@faqContentRowWidth           : 100%;
@faqContentRowMobileMarginBottom    : 0.625rem;
@faqContentRowTabletMarginBottom    : 0.625rem;
@faqContentRowDesktopMarginBottom   : 1.25rem;
@faqContentRowMobilePadding   : 0;
@faqContentRowLetterSpacing   : -0.015em;
@faqContentFontSize           : 1rem;
@faqContentFontWeight         : 400;
@faqContentFontStyle          : normal;

/* FAQ Content Info */
@faqContentInfoHeight         : 1.5rem;
@faqContentInfoLineHeight     : 1.5rem;

/* FAQ Content Language */
@faqContentInfoLangFontSize   : 1.125rem;
@faqContentInfoLangFontWeight : bold;
@faqContentInfoLangImgPadding : 0;
@faqContentInfoLangImgMargin  : 0;
@faqContentInfoLangImgWidth   : 1.125rem;

@faqContentInfoLangItemPadding : 0.125rem 0.25rem;
@faqContentInfoItemFontWeight : normal;
@faqContentInfoItemFontSize   : 0.875rem;
@faqContentInfoItemMarginL    : 0.312rem;

@faqContentInfoLangWidth: 260px;
@faqContentInfoLangPadding: 4px;


/* FAQ Content content */
@faqContentContentLineHeight  : 1.5rem;

/* FAQ Content Actions */
@faqContentActionPadding      : 0;
@faqContentActionButtonMargin : 0 0 0 0.22rem;
@faqContentActionButtonFontSize : 1.5rem;
@faqContentActionButtonBackground : transparent;
@faqContentActionButtonIconMargin : 0;
@faqContentActionMobileMarginTop: 0.625rem;
@faqContentActionDesktopMarginTop: 0;

/* FAQ Content Colors */
@faqContentInfoTextColor      : @japaneseIndigo;
@faqContentContentTextColor   : @black;
